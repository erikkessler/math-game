<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcx.mathgame"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk 
        android:minSdkVersion="15" 
        android:targetSdkVersion="19" />
    <supports-screens android:xlargeScreens="true" android:largeScreens="true" android:normalScreens="true"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="com.tcx.mathgame.HomeScreen"
			android:theme="@android:style/Theme.Holo.Light" >
			
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
			
		
        </activity>
        <activity
            android:label="Math"
            android:name="com.tcx.mathgame.MainActivity"
			android:theme="@android:style/Theme.Holo.Light"
			android:parentActivityName="com.tcx.mathgame.HomeScreen" >
			<meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.tcx.mathgame.HomeScreen" /> 
          </activity>
		 
		 <activity
            android:label="Settings"
            android:name="com.tcx.mathgame.SettingsActivity"
			android:theme="@android:style/Theme.Holo.Light"
			android:parentActivityName="com.tcx.mathgame.HomeScreen" >
			<meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.tcx.mathgame.HomeScreen" />
		</activity>
		 
		 <activity
            android:label="History"
            android:name="com.tcx.mathgame.GameHistory"
			android:theme="@android:style/Theme.Holo.Light"
			android:parentActivityName="com.tcx.mathgame.HomeScreen" >
			<meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.tcx.mathgame.HomeScreen" />
		 </activity>
		 
		 <activity
            android:label="Extra Math"
            android:name="com.tcx.mathgame.ExtraMath"
			android:theme="@android:style/Theme.Holo.Light"
			android:parentActivityName="com.tcx.mathgame.HomeScreen" >
			<meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.tcx.mathgame.HomeScreen" />
		 </activity>
		 
		 <service 
		     android:name="com.tcx.mathgame.AppCheckerService"
		     android:label="App Checker Service" />
		 

        <receiver android:name="MyScheduleReciver" 
            >
            <intent-filter>
                <action android:name="tcx.YOLO" />
                <action android:name="tcx.START" />
                <action android:name="tcx.STOP" />
                <action android:name="tcx.PAUSE" />
            </intent-filter>
        </receiver>
        <receiver android:name="MyStartServiceReceiver" >
        </receiver>
		     
		
    </application>
	<uses-permission android:name="net.dinglisch.android.tasker.PERMISSION_RUN_TASKS" />
	<uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.INTERNET" />
		

</manifest>
